<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.Project.Controller.LoginController">

   <!-- Sisi kiri: Gambar -->
   <left>
      <ImageView fitWidth="400.0" preserveRatio="true" smooth="true">
         <image>
            <Image url="@../../img/tampil.jpg" />
         </image>
      </ImageView>
   </left>

   <!-- Sisi tengah: Form login -->
   <center>
      <VBox alignment="CENTER" prefHeight="2973.0" prefWidth="5822.0" spacing="10.0">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>

         <ImageView fitHeight="55.0" fitWidth="75.0" preserveRatio="true">
            <image>
               <Image url="@../../img/login.jpg" />
            </image>
         </ImageView>

         <TextField fx:id="usernameField" maxWidth="250.0" promptText="Username" />
         <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Password" />
         <Button fx:id="loginButton" maxWidth="150.0" onAction="#handleLogin" text="Login" />

         <Hyperlink onAction="#handleForgotPassword" text="Forgot Password?" />

         <!-- Hanya 'Sign up' yang bisa diklik -->
         <HBox alignment="CENTER">
            <Label text="Don't have an account? " />
            <Hyperlink text="Sign up" onAction="#handleRegisterLink" />
         </HBox>

      </VBox>
   </center>

</BorderPane>

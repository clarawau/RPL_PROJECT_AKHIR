<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.Project.Controller.LoginController"
            prefWidth="400" prefHeight="300">
   <children>
      <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30">
         <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

         <TextField fx:id="usernameField" promptText="Username" />
         <PasswordField fx:id="passwordField" promptText="Password" />

         <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>

         <Hyperlink text="Lupa Password?" onAction="#handleForgotPassword" />

      </VBox>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.Project.Controller.RegisterController"
            prefHeight="900.0" prefWidth="1600.0"
            style="-fx-background-color: linear-gradient(to bottom right, #eaf6ff, #ffffff);">

    <!-- Kiri: Panel Branding -->
    <left>
        <VBox alignment="CENTER" spacing="20.0" prefWidth="400"
              style="-fx-background-color: #b3e0ff;">
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="ðŸ’°" style="-fx-font-size: 48;" />
                <Label text="MoneyWise" style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #005bb5;" />
                <Label text="Create your account to manage finances easily"
                       style="-fx-font-size: 14; -fx-text-fill: #003366;" wrapText="true"
                       maxWidth="250"/>
            </VBox>
        </VBox>
    </left>

    <!-- Tengah: Form Registrasi -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Judul lebih menarik -->
            <Label text="âœ¨ Create Your MoneyWise Account âœ¨">
                <font>
                    <Font size="28.0"/>
                </font>
                <style>
                    -fx-font-weight: bold;
                    -fx-text-fill: #003366;
                </style>
            </Label>

            <Label text="Have any account?">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>

            <Hyperlink fx:id="login" text="Login" onAction="#onactionlg" />

            <!-- Form Registrasi -->
            <VBox alignment="CENTER" spacing="10.0"
                  style="-fx-background-color: white; -fx-padding: 35 45 35 45; -fx-background-radius: 10;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 0);">

                <TextField fx:id="fullNameField" promptText="Username" maxWidth="320" />
                <PasswordField fx:id="pass1" promptText="Password" maxWidth="320" />
                <PasswordField fx:id="pass2" promptText="Confirm Password" maxWidth="320" />
                <Label fx:id="labelConfirmPasswordWarning" textFill="red" visible="false" wrapText="true" maxWidth="300" />
                <Label fx:id="labelPasswordInfo" textFill="red" visible="false" wrapText="true" maxWidth="300" />

                <HBox alignment="CENTER_LEFT" spacing="10" maxWidth="320">
                    <Label text="Favorite Color" />
                    <ColorPicker fx:id="color" style="-fx-pref-width: 200;" />
                </HBox>

                <TextField fx:id="pet" promptText="Pet Name" maxWidth="320" />
                <TextField fx:id="book" promptText="Favorite Book" maxWidth="320" />
                <TextField fx:id="food" promptText="Favorite Food" maxWidth="320" />

                <Button fx:id="submitButton" text="Register" onAction="#register"
                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-padding: 8 20; -fx-background-radius: 25; -fx-cursor: hand;" />
            </VBox>
        </VBox>
    </center>
</BorderPane>

<AnchorPane prefHeight="500" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.Project.Controller.ForgetPassController">
    <children>
        <VBox alignment="CENTER" layoutX="30.0" layoutY="101.0" spacing="10" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="101.0">

            <TextField fx:id="usernameField" promptText="Username" />

            <TextField fx:id="petField" promptText="Pet Name" />
            <TextField fx:id="foodField" promptText="Favorite Food" />
            <TextField fx:id="bookField" promptText="Favorite Book" />
            <ColorPicker fx:id="colorPicker" />

            <PasswordField fx:id="newPasswordField" promptText="New Password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
        </VBox>
      <Pane layoutY="-8.0" prefHeight="83.0" prefWidth="400.0" style="-fx-background-color: #ADD8E6;">
         <children>
            <Label layoutX="65.0" layoutY="22.0" text="Reset Password">
               <font>
                  <Font name="Arial Black" size="32.0" />
               </font>
            </Label>
         </children>
      </Pane>
         <Hyperlink fx:id="backToLogin" layoutX="151.0" layoutY="385.0" onAction="#backToLogin" text="Back to Login" />

         <Button fx:id="resetButton" layoutX="142.0" layoutY="360.0" onAction="#resetPassword" text="Reset Password" />
      <Pane layoutY="450.0" prefHeight="83.0" prefWidth="400.0" style="-fx-background-color: #ADD8E6;" />
    </children>
</AnchorPane>
